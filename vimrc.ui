Plug 'joshdick/onedark.vim'
let g:onedark_terminal_italics=1
if (has("autocmd") && !has("gui_running") && ('onedark' ==? g:setting.color_scheme))
  augroup colorset
    autocmd!
    let s:white = { "gui": "#ABB2BF", "cterm": "145", "cterm16" : "7" }
    autocmd ColorScheme * call onedark#set_highlight("Normal", { "fg": s:white })
    " `bg` will not be styled since there is no `bg` setting
    " 下面主要解决再konsole下， blur效果下显示不清晰的问题
    let s:comment = { "gui": "#00af87", "cterm": "36", "cterm16": "8" }
    let s:linenr = { "gui": "#87af00", "cterm": "106", "cterm16": "8" }
    autocmd ColorScheme * call onedark#extend_highlight("Comment",  {"fg": s:comment})
    autocmd ColorScheme * call onedark#extend_highlight("SpecialComment",  {"fg": s:comment})
    autocmd ColorScheme * call onedark#extend_highlight("Folded",  {"fg": s:comment})
    autocmd ColorScheme * call onedark#extend_highlight("LineNr",  {"fg": s:linenr})
  augroup END
endif

